<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jyx.vip.dao.UserDao">

    <!--此id与dao中的方法名相同-->
    <select id="select" resultType="com.jyx.vip.entity.UserEntity">
        select * from sys_user where ${key}=#{value}
    </select>

    <update id="update">
       update sys_user set account= #{account},name = #{name},password = #{password} where id = #{id};
    </update>
</mapper>
