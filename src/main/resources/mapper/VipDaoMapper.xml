<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jyx.vip.dao.VipDao">

    <insert id="insert">
        insert into vip_detail(id,code,name,age,sex,qq,email,address,zip,rank,amount) values (#{id},#{code},#{name},#{age},#{sex},#{qq},#{email},#{address},#{zip},#{rank},#{amout})
    </insert>

    <update id="update">
        update vip_detail set
        code = #{code},
        name = #{name},
        age = #{age},
        sex = #{sex},
        qq = #{qq},
        email = #{email},
        address = #{address},
        zip = #{zip},
        rank = #{rank},
        amount = #{amount}
        where id = #{id}
    </update>

    <select id="select" resultMap="VipMap">
        select *from vip_detail where ${key} = #{value}
    </select>

    <select id="selectLike" resultMap="VipMap">
        select * from vip_detail
        <if test="key!=null">
            where code like #{key} or name like #{key} or qq like #{key} or email like #{key} or address like #{key} or
            remark like #{key}
        </if>
        order by code
    </select>

    <resultMap id="VipMap" type="com.jyx.vip.entity.VipEntity">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="sex" column="sex"/>
        <result property="age" column="age"/>
        <result property="qq" column="qq"/>
        <result property="email" column="email"/>
        <result property="address" column="address"/>
        <result property="zip" column="zip"/>
        <result property="remark" column="remark"/>
        <result property="rank" column="rank"/>
        <result property="amount" column="amount"/>
    </resultMap>
</mapper>
